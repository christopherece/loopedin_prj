<?xml version="1.0" encoding="UTF-8"?>
<configuration>

  <location path="." inheritInChildApplications="false">
    <appSettings>
      <!-- WSGI handler for Django -->
      <add key="WSGI_HANDLER" value="django.core.wsgi.get_wsgi_application()" />

      <!-- Path to your Django project root (same folder as manage.py) -->
      <add key="PYTHONPATH" value="C:\inetpub\wwwroot\SocialMedia" />

      <!-- Django settings module -->
      <add key="DJANGO_SETTINGS_MODULE" value="socialmedia.settings" />
    </appSettings>

    <system.webServer>
      <handlers>
        <!-- Main FastCGI handler for Django -->
        <add name="DjangoFastCGI"
             path="*"
             verb="*"
             modules="FastCgiModule"
             scriptProcessor="C:\inetpub\wwwroot\SocialMedia\venv\Scripts\python.exe|C:\inetpub\wwwroot\SocialMedia\venv\Lib\site-packages\wfastcgi.py"
             resourceType="Unspecified"
             requireAccess="Script" />

        <!-- Static file handler with unique name -->
        <add name="StaticFileDjango"
             path="static/*"
             verb="*"
             modules="StaticFileModule"
             resourceType="File"
             requireAccess="Read" />
      </handlers>

      <!-- Static content MIME types (removed first to avoid duplication) -->
      <staticContent>
        <remove fileExtension=".css" />
        <mimeMap fileExtension=".css" mimeType="text/css" />

        <remove fileExtension=".js" />
        <mimeMap fileExtension=".js" mimeType="application/javascript" />

        <remove fileExtension=".json" />
        <mimeMap fileExtension=".json" mimeType="application/json" />

        <remove fileExtension=".woff" />
        <mimeMap fileExtension=".woff" mimeType="application/font-woff" />

        <remove fileExtension=".woff2" />
        <mimeMap fileExtension=".woff2" mimeType="application/font-woff2" />

        <remove fileExtension=".svg" />
        <mimeMap fileExtension=".svg" mimeType="image/svg+xml" />
      </staticContent>
    </system.webServer>
  </location>

  <system.web>
    <!-- Allows IIS to use the app pool identity -->
    <identity impersonate="true" />
  </system.web>

</configuration>
